<?xml version="1.0" encoding="utf-8"?>
<repo schema-version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

<!-- srpmbuild-5-i386 -->

<main>
<xi:include href="srpmbuild.xml" xpointer="xpointer(/*/main/*)"/>
<version>5</version>
<arch>i386</arch>
</main>

<repos>
<!--centos-buildsys-5 repo provides buildsys-build package-->
<!-- epel repo provides rpmlint package-->
<xi:include href="../repos.xml"
            xpointer="xpointer(/*/repo[@id='base'] | 
                               /*/repo[@id='updates'] |
                               /*/repo[@id='centos-buildsys-5'] |
                               /*/repo[@id='epel'] )"/>
</repos>

<packages>
<group>core</group>
<package>buildsys-build</package>
<package>rpmlint</package>
</packages>

<xi:include href="srpmbuild.xml"
            xpointer="xpointer(/*/*[name()!='main' and 
                                    name()!='repos' and
                                    name()!='packages'])"/>

</repo>
