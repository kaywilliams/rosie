<files destdir="%{deploy-templates-dir}">azure-install.xml</files>
<files destdir="%{deploy-templates-dir}">azure-vm-config.xml</files>
<files destdir="%{deploy-templates-dir}">deploy.xml</files>
<files destdir="%{deploy-templates-dir}">test.definition</files>
</config-rpm>
</config-rpms>
