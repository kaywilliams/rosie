<?xml version="1.0" encoding="utf-8"?>
<repos xmlns:xi="http://www.w3.org/2001/XInclude">

<!-- See www.centos.org for a list of public mirrors -->
<repo id="base">
<macro id='centos-mirror'>http://mirror.centos.org/centos/</macro>
<baseurl>%{centos-mirror}/%{version}/os/%{arch}/</baseurl>
<gpgkey>%{centos-mirror}/RPM-GPG-KEY-CentOS-%{version}</gpgkey>
</repo>

<repo id="updates">
<baseurl>%{centos-mirror}/%{version}/updates/%{arch}/</baseurl>
</repo>

<repo id="centos-buildsys-5">
<baseurl>http://dev.centos.org/centos/buildsys/5/</baseurl>
<gpgkey>http://dev.centos.org/centos/RPM-GPG-KEY-CentOS-4</gpgkey>
</repo>

<repo id='epel'>
<macro id='epel-mirror'>http://dl.fedoraproject.org/pub/epel</macro>
<baseurl>%{epel-mirror}/%{version}/%{arch}</baseurl>
<gpgkey>%{epel-mirror}/RPM-GPG-KEY-EPEL-%{version}</gpgkey>
</repo>

<repo id='deploy'>
<macro id='deploy-mirror'>http://www.deployproject.org/products/deploy/deploy-%{version}-%{arch}</macro>
<baseurl>%{deploy-mirror}</baseurl>
</repo>
</repos>
