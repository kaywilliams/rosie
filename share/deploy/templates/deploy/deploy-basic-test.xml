<?xml version="1.0" encoding="utf-8"?>
<xml xmlns:xi="http://www.w3.org/2001/XInclude">

<xi:include href="%{templates-dir}/deploy/deploy-basic-config.xml"/> 
<xi:include href="%{templates-dir}/deploy/deploy-remote-client-config.xml"/> 

<config-rpm id='deploy-basic-test-config'>
<files destdir="/root" destname='rhn-systemid'>%{rhn-systemid}</files>
</config-rpm>

<script id='test-deploy-basic' type='post' comes-after='install-config' comes-before='poweroff'>
#!/bin/sh
deploy /usr/share/deploy/templates/httpd/web-server.definition \
  --disable-module test-install \
  --disable-module test-update \
  --macro "os:%{os}" \
  --macro "rhel-mirror:%{rhel-mirror}" \
  --macro "rhn-systemid:/root/rhn-systemid"
</script>
</xml>
