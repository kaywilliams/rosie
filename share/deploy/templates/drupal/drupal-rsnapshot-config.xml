<?xml version="1.0" encoding="UTF-8"?>
<config-rpm id='drupal-rsnapshot-config' xmlns:xi="http://www.w3.org/2001/XInclude">

<requires>rsnapshot-local-config</requires>
<files destdir="/etc/rsnapshot.d" destname="drupal" content='text' mode='755'>
su postgres -c 'pg_dump %{sitename}' 2>/dev/null 1>%{sitename}
</files>
<script type='post'>
if [[ ! $(grep "drupal" /etc/rsnapshot.conf) ]]; then 
  echo -e "backup\t/usr/share/drupal7/sites/\tlocalhost/" >> /etc/rsnapshot.conf
  echo -e "backup_script\t/etc/rsnapshot.d/drupal\tlocalhost/var/lib/pgsql/backups/" >> /etc/rsnapshot.conf
fi
</script>
</config-rpm>
