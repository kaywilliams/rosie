<?xml version="1.0" encoding="utf-8"?>
<config-rpm id='ssh-install-pubkeys'>
<requires>openssh</requires>
<requires>openssh-clients</requires>
<requires>/usr/sbin/sshd</requires>

<!--
include files elements to install ssh pubkeys authkeys folder, e.g.
<files destdir='%{install-dir}/pubkeys'>mykey.pub</files>
-->
<files destdir='/usr/sbin' mode='750'>%{templates-dir}/%{norm-os}/common/ssh-install-pubkey.sh</files>

<script type='post'>
keydir='%{install-dir}/pubkeys'
if [ -d $keydir ]; then
  for f in $keydir; do 
    ssh-install-pubkey.sh $f /root/.ssh/authorized_keys
  done
fi
</script>
</config-rpm>
