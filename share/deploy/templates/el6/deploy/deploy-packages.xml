<?xml version="1.0" encoding="utf-8"?>
<xml schema-version="1.0">
<macro id="gpgsign-public"/>
<macro id="gpgsign-secret"/>

<gpgsign>
<public>%{gpgsign-public}</public>
<secret>%{gpgsign-secret}</secret>
</gpgsign>

<config-rpms>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-basic-config.xml"/>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-standard-config.xml"/>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-developer-config.xml"/>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-developer-workspace-config.xml"/>
<include href='%{templates-dir}/%{norm-os}/iptables/iptables-update.xml'/>
<config-rpm id='deploy-httpd-config'>
<include href="%{templates-dir}/%{norm-os}/httpd/httpd-config.xml"
         xpath="./*"/>
</config-rpm>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-libvirt-config.xml"/>
</config-rpms>

<srpmbuild>
<include href="%{templates-dir}/%{norm-os}/deploy/deploy-srpm.xml"/>
<include href="%{templates-dir}/%{norm-os}/deploy/pyliblzma-srpm.xml"/>
</srpmbuild>
</xml>
