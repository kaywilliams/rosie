<?xml version="1.0" encoding="utf-8"?>
<xml xmlns:xi="http://www.w3.org/2001/XInclude">
<!-- set per-module storage-data-files for use across define, attach and mount
     storage scripts-->
<macro id="storage-data-file-test-update">%{deployment-script-dir}/storage-volume-data-test-update</macro>
<macro id="storage-data-file-test-install">%{deployment-script-dir}/storage-volume-data-test-install</macro>
<macro id="storage-data-file-publish">%{deployment-script-dir}/storage-volume-data-publish</macro>

<!-- require ssl access to repositories -->
<remote-url https='True'/>
<release-rpm><updates sslverify='False'/></release-rpm>

<!-- install and update a rackspace cloud server -->
<xi:include href='%{templates-dir}/%{norm-os}/common/acpid-config.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/ssh-config.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/test-exists.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/activate.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/connect.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/test-triggers.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/delete.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/install.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/verify-install.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/save-triggers.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/clean-storage-volume-data.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/attach-storage-volumes.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/rackspace/mount-storage-volumes.xml' xpointer='xpointer(./*)'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/configure-repo-access.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/update-yum-conf.xml'/>
<xi:include href='%{templates-dir}/%{norm-os}/common/update.xml'/>
</xml>
