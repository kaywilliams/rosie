<?xml version="1.0" encoding="utf-8"?>
<xml>

<!-- install and update a Windows Azure virtual machine -->
<macro id='user'>deploy</macro>
<macro id='domain'>cloudapp.net</macro>

<!-- template content below -->
<domain>%{domain}</domain>
<include href='%{templates-dir}/%{norm-os}/common/acpid-config.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/ssh-config.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/create-ssh-keys.xml'/>
<include href='%{templates-dir}/%{norm-os}/windows-azure/windows-azure-guest-config.xml'
         xpath="./*"/>
<include href='%{templates-dir}/%{norm-os}/common/test-triggers.xml'/>
<include href='%{templates-dir}/%{norm-os}/windows-azure/activate.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/connect.xml'/>
<include href='%{templates-dir}/%{norm-os}/windows-azure/delete.xml'/>
<include href='%{templates-dir}/%{norm-os}/windows-azure/install.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/save-triggers.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/update-yum-conf.xml'/>
<include href='%{templates-dir}/%{norm-os}/common/update.xml'/>
<include href='%{templates-dir}/%{norm-os}/windows-azure/configure-endpoints.xml'/>
<include href="%{templates-dir}/%{norm-os}/common/check-kernel.xml"/>
<include href="%{templates-dir}/%{norm-os}/common/conditional-test-remove-custom-pkgs.xml"/>
<include href="%{templates-dir}/%{norm-os}/windows-azure/conditional-poweroff.xml"/>
<script id='post-delete' type='post' hostname='localhost'
        comes-after="conditional-test-remove-custom-pkgs check-kernel"
        modules='test-install'>
<include href="%{templates-dir}/%{norm-os}/windows-azure/delete.xml"
         xpath="./text()"/>
</script>
</xml>
