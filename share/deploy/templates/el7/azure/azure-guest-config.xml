<?xml version="1.0" encoding="utf-8"?>
<xml>

<!-- openlogic repository does not sign rpms -->
<macro id='release-rpm'>
<release-rpm><updates gpgcheck='false'/></release-rpm>
</macro>
%{release-rpm}

<config-rpm id='azure-guest-config'>
<repo id='openlogic'>
<baseurl>
http://olcentgbl.trafficmanager.net/openlogic/%{version}/openlogic/%{arch}
</baseurl>
<gpgkey>
http://olcentgbl.trafficmanager.net/openlogic/%{version}/openlogic/%{arch}/OpenLogic-GPG-KEY
</gpgkey>
</repo>
<requires>WALinuxAgent</requires>
<requires>hypervkvpd</requires>
<requires>hyperv-daemons-license</requires>
</config-rpm>
</xml>
