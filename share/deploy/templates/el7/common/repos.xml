<?xml version="1.0" encoding="utf-8"?>
<repos xmlns:xi="http://www.w3.org/2001/XInclude">

<repo id="base">
%{%{os}-base}

<macro id="centos-mirror">http://mirror.centos.org/centos/</macro>
<macro id="centos-base">
<baseurl>%{centos-mirror}/%{version}/os/%{arch}</baseurl>
<gpgkey>%{centos-mirror}/RPM-GPG-KEY-CentOS-%{version}</gpgkey>
</macro>

<macro id="rhel-mirror">http://mirror.company.com/rhel</macro>
<macro id="rhel-base">
<baseurl>%{rhel-mirror}/enterprise/%{version}Server/en/os/%{arch}</baseurl>
<gpgkey>%{rhel-mirror}/enterprise/%{version}Server/en/os/%{arch}/RPM-GPG-KEY-redhat-release</gpgkey>
<gpgkey>%{rhel-mirror}/enterprise/%{version}Server/en/os/%{arch}/RPM-GPG-KEY-redhat-beta</gpgkey>
</macro>

<macro id="fedora-mirror">http://mirror.pnl.gov/fedora/linux</macro>
<macro id="fedora-base">
<baseurl>%{fedora-mirror}/releases/%{version}/Fedora/%{arch}/os</baseurl>
<gpgkey>http://keyserver.gingerbear.net/pks/lookup?op=get&amp;search=0x07477E65FB4B18E6</gpgkey>
</macro>
</repo>

<repo id="updates">
%{%{os}-updates}

<macro id="centos-updates">
<baseurl>%{centos-mirror}/%{version}/updates/%{arch}</baseurl>
<gpgkey>%{centos-mirror}/RPM-GPG-KEY-CentOS-%{version}</gpgkey>
</macro>

<macro id="fedora-updates">
<baseurl>%{fedora-mirror}/updates/%{version}/%{arch}</baseurl>
<gpgkey>http://keyserver.gingerbear.net/pks/lookup?op=get&amp;search=0x07477E65FB4B18E6</gpgkey>
</macro>

<macro id="rhel-updates">
<!-- updates repo not yet available, use the base repo for now so that 
     templates work without modification -->
%{rhel-base}
</macro>
</repo>

<repo id='epel'>
<!-- use fc19 as el7 is not yet available -->
<baseurl>http://mirror.pnl.gov/fedora/linux/updates/19/%{arch}</baseurl>
<gpgkey>https://fedoraproject.org/static/FB4B18E6.txt</gpgkey>
</repo>

<repo id='deploy'>
<macro id='deploy-mirror'>http://www.deployproject.org/products/deploy/deploy-%{version}-%{arch}</macro>
<baseurl>%{deploy-mirror}</baseurl>
</repo>
</repos>
