<?xml version="1.0" encoding="utf-8"?>
<repos xmlns:xi="http://www.w3.org/2001/XInclude">

<repo id="base">
%{%{os}-base}

<macro id="centos-mirror">http://mirror.centos.org/centos/</macro>
<macro id="centos-base">
<baseurl>%{centos-mirror}/%{version}/os/%{arch}</baseurl>
<gpgkey>%{centos-mirror}/RPM-GPG-KEY-CentOS-%{version}</gpgkey>
</macro>

<macro id="edition">Server</macro>
<macro id="rhel-mirror">http://mirror.company.com/rhel/enterprise/%{version}%{edition}/en/os/%{arch}</macro>
<macro id="rhel-base">
<baseurl>%{rhel-mirror}</baseurl>
<gpgkey>%{rhel-mirror}/RPM-GPG-KEY-redhat-release</gpgkey>
<gpgkey>%{rhel-mirror}/RPM-GPG-KEY-redhat-beta</gpgkey>
</macro>

<macro id="fedora-mirror">http://mirror.pnl.gov/fedora/linux</macro>
<macro id="fedora-base">
<baseurl>%{fedora-mirror}/releases/%{version}/Fedora/%{arch}/os</baseurl>
<gpgkey>http://keyserver.gingerbear.net/pks/lookup?op=get&amp;search=0x07477E65FB4B18E6</gpgkey>
</macro>
</repo>

<repo id="updates">
%{%{os}-updates}

<macro id="centos-updates">
<baseurl>%{centos-mirror}/%{version}/updates/%{arch}</baseurl>
<gpgkey>%{centos-mirror}/RPM-GPG-KEY-CentOS-%{version}</gpgkey>
</macro>

<macro id="fedora-updates">
<baseurl>%{fedora-mirror}/updates/%{version}/%{arch}</baseurl>
<gpgkey>http://keyserver.gingerbear.net/pks/lookup?op=get&amp;search=0x07477E65FB4B18E6</gpgkey>
</macro>

<macro id="rhel-updates">
<baseurl>https://cdn.redhat.com/content/beta/rhel/%{edition}/%{version}/%{arch}/os</baseurl>
<sslcacert>/etc/rhsm/ca/redhat-uep.pem</sslcacert>
<sslclientkey>/etc/pki/entitlement/xxx-key.pem</sslclientkey>
<sslclientcert>/etc/pki/entitlement/xxx.pem</sslclientcert>
</macro>

<!-- example rhn repo defition
<macro id="rhel-updates">
<baseurl>rhn://xmlrpc.rhn.redhat.com/rhel-%{arch}-%{edition}-%{version}</baseurl>
<systemid>/etc/sysconfig/rhn/systemid-%{version}%{edition}-%{arch}</systemid>
</macro>
-->
</repo>

<repo id='epel'>
<macro id='epel-mirror'>http://dl.fedoraproject.org/pub/epel</macro>
<baseurl>%{epel-mirror}/%{version}/%{arch}</baseurl>
<gpgkey>%{epel-mirror}/RPM-GPG-KEY-EPEL-%{version}</gpgkey>
</repo>

</repos>
