<?xml version="1.0" encoding="utf-8"?>
<xml schema-version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
<macro id="gpgsign-public"/>
<macro id="gpgsign-secret"/>

<gpgsign>
<public>%{gpgsign-public}</public>
<secret>%{gpgsign-secret}</secret>
</gpgsign>

<config-rpms>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-basic-config.xml"/>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-standard-config.xml"/>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-developer-config.xml"/>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-developer-workspace-config.xml"/>
<config-rpm id='deploy-httpd-config'>
<xi:include href="%{templates-dir}/%{norm-os}/httpd/httpd-config.xml"
            xpointer="xpointer(./*)"/>
</config-rpm>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-libvirt-config.xml"/>
</config-rpms>

<srpmbuild>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/deploy-srpm.xml"/>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/dnsmasq-srpm.xml"/>
<xi:include href="%{templates-dir}/%{norm-os}/deploy/rhn-srpms.xml"
            xpointer="xpointer(./*)"/>
</srpmbuild>
</xml>
