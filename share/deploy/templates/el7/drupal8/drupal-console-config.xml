<config-rpm id='drupal-console-config'>
<macro id='composer-dir'>/usr/share/composer</macro>

<requires>curl</requires>

<files destdir="/etc/profile.d" destname="drupal-console" content="text">
# enable shell autocomplete
source "$HOME/.console/console.rc" 2>/dev/null
</files>

<files destdir="/etc/cron.daily" destname="drupal-console-update" content="text" mode="755">
#!/bin/bash
/usr/bin/drupal -q self-update
</files>

<script type='post'>
curl -s https://drupalconsole.com/installer -L -o drupal.phar
mv drupal.phar /usr/bin/drupal
chmod +x /usr/bin/drupal
drupal -q init --override
drupal -q check
</script>
</config-rpm>
