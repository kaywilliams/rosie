<config-rpm id='openstack-server-config'>
<description>
Configures a single server openstack installation.
</description>

<!-- include rdo repo -->
<repo id='rdo'>
<baseurl>http://repos.fedorapeople.org/repos/openstack/openstack-icehouse/epel-%{version}/</baseurl>
<gpgkey>%{templates-dir}/%{norm-os}/openstack/RPM-GPG-KEY-RDO-Icehouse</gpgkey>
</repo>

<!-- include epel repo -->
<include href="%{templates-dir}/%{norm-os}/common/repos.xml"
         xpath="./repo[@id='epel']"/>
</config-rpm>
