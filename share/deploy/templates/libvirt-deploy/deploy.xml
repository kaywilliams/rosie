<?xml version="1.0" encoding="utf-8"?>
<xml xmlns:xi="http://www.w3.org/2001/XInclude">
<!-- install and update a libvirt vm on the local machine -->

<!-- can also override the following macros -->
<macro id='file-size'>30</macro>
<macro id='deploy-templates-dir'>../</macro>

<!-- template content below -->
<domain>deploy</domain>
<build-host interface='virbrdpl'/>
<kickstart>
<xi:include href='%{deploy-templates-dir}/common/ks.xml'
            xpointer="xpointer(./node())"/>
<xi:include href='%{deploy-templates-dir}/common/ks-post-ssh.xml'
            xpointer="xpointer(./node())"/>
</kickstart>
<xi:include href='%{deploy-templates-dir}/common/ssh-config.xml'/>
<xi:include href='%{deploy-templates-dir}/common/test-triggers.xml'/>
<xi:include href='%{deploy-templates-dir}/libvirt-deploy/libvirt-activate.xml'/>
<xi:include href='%{deploy-templates-dir}/libvirt-deploy/libvirt-delete.xml'/>
<xi:include href='%{deploy-templates-dir}/libvirt-deploy/libvirt-install.xml'/>
<xi:include href='%{deploy-templates-dir}/common/verify-install.xml'/>
<xi:include href='%{deploy-templates-dir}/common/save-triggers.xml'/>
<xi:include href='%{deploy-templates-dir}/common/update.xml'/>
<xi:include href='%{deploy-templates-dir}/common/check-kernel.xml'/>

</xml>
