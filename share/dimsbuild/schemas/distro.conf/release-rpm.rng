<grammar xmlns="http://relaxng.org/ns/structure/1.0" 
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <!-- DOCBOOK ENTRY -->
    <refentry xmlns="">
      <refsect1>
        <title>RELEASE RPM</title>
        <para>information about the release-rpm element</para>
      </refsect1>
    </refentry>

  <element name="distro">
    <optional>
      <element name="release-rpm">
        <optional>
          <attribute name="enabled">
            <ref name="value-boolean-with-default"/>
          </attribute>
        </optional>        
        <interleave>              
          <optional>
            <ref name="element-obsoletes"/>
          </optional>
          <optional>
            <element name="release"><text/></element>
          </optional>
          <optional>
            <element name="release-files">
              <oneOrMore>
                <ref name="element-path"/>
              </oneOrMore>
            </element>
          </optional>              
          <optional>
            <element name="release-notes">
              <interleave>                                              
                <optional>
                  <element name="omf">
                    <optional>
                      <attribute name="install-path"><text/></attribute>
                    </optional>
                    <oneOrMore>
                      <ref name="element-path"/>
                    </oneOrMore>                        
                  </element>
                </optional>                    
                <optional>
                  <element name="html">
                    <optional>
                      <attribute name="install-path"><text/></attribute>
                    </optional>
                    <oneOrMore>
                      <ref name="element-path"/>
                    </oneOrMore>                        
                  </element>
                </optional>
                <optional>
                  <element name="doc">
                    <optional>
                      <attribute name="install-path"><text/></attribute>
                    </optional>
                    <oneOrMore>
                      <ref name="element-path"/>
                    </oneOrMore>                        
                  </element>
                </optional>                    
              </interleave>
            </element>
          </optional>              
          <optional>
            <element name="yum-repos">
              <attribute name="include-input">
                <ref name="value-boolean"/>
              </attribute>
              <zeroOrMore>
                <ref name="element-path"/>
              </zeroOrMore>
            </element>
          </optional>
        </interleave>            
      </element>
    </optional>
  </element>
  </start>

  <include href="rpms.rng"/>
</grammar>
