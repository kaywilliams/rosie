<grammar xmlns="http://relaxng.org/ns/structure/1.0"
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>

    <element name="appliance">
    <optional>
      <element name="release-rpm">

        <optional>
        <attribute name="enabled"><ref name="value-boolean"/></attribute>
        </optional>
        <optional>
        <attribute name="use-default-obsoletes">
          <ref name="value-boolean"/>
        </attribute>
        </optional>

        <interleave>

          <zeroOrMore>
            <element name="files">
              <ref name="content-path-with-dest"/>
            </element>
          </zeroOrMore>

          <zeroOrMore>
            <element name="eula">
              <ref name="content-path-with-dest"/>
              <optional>
              <attribute name="include-in-firstboot">
                <ref name="value-boolean"/>
              </attribute>
              </optional>
            </element>
          </zeroOrMore>

          <zeroOrMore>
            <element name="html">
              <ref name="content-path-with-dest"/>
            </element>
          </zeroOrMore>

          <zeroOrMore>
            <element name="doc">
              <ref name="content-path-with-dest"/>
            </element>
          </zeroOrMore>

          <ref name="element-obsoletes"/>

        </interleave>
      </element>
    </optional>
    </element>
  </start>

  <include href="rpmbuild.rng"/>
  <include href="lib.rng"/>

</grammar>
