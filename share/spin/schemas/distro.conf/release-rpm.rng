<grammar xmlns="http://relaxng.org/ns/structure/1.0"
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>

    <element name="distro">
    <optional>
      <element name="release-rpm">

        <optional>
        <attribute name="enabled"><ref name="value-boolean"/></attribute>
        </optional>
        <optional>
        <attribute name="use-default-obsoletes">
          <ref name="value-boolean"/>
        </attribute>
        </optional>

        <interleave>

          <optional>
          <element name="release-files">
            <oneOrMore>
              <ref name="element-path"/>
            </oneOrMore>
          </element>
          </optional>

          <optional>
          <element name="eula">
            <optional>
            <element name="include-in-firstboot">
              <ref name="value-boolean"/>
            </element>
            </optional>
            <ref name="element-path"/>
          </element>
          </optional>

          <optional>
          <element name="release-notes">
            <interleave>

              <optional>
              <element name="omf">
                <optional>
                <attribute name="dest"><text/></attribute>
                </optional>

                <oneOrMore>
                <ref name="element-path-with-dest"/>
                </oneOrMore>
              </element>
              </optional>

              <optional>
              <element name="html">
                <optional>
                <attribute name="dest"><text/></attribute>
                </optional>

                <oneOrMore>
                <ref name="element-path-with-dest"/>
                </oneOrMore>
              </element>
              </optional>

              <optional>
              <element name="doc">
                <optional>
                <attribute name="dest"><text/></attribute>
                </optional>

                <oneOrMore>
                <ref name="element-path-with-dest"/>
                </oneOrMore>
              </element>
              </optional>

            </interleave>
          </element>
          </optional>

          <optional>
          <element name="yum-repos">
            <optional>
              <attribute name="include-distro">
                <ref name="value-boolean"/>
              </attribute>
            </optional>

            <optional>
              <attribute name="include-input">
                <ref name="value-boolean"/>
              </attribute>
            </optional>

            <zeroOrMore>
            <ref name="element-path"/>
            </zeroOrMore>
          </element>
          </optional>

          <ref name="element-obsoletes"/>

        </interleave>
      </element>
    </optional>
    </element>
  </start>

  <include href="rpms.rng"/>
</grammar>
