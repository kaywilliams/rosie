.PHONY: all clean install

all:

install:
	mkdir -p $(DESTDIR)/usr/share/spin/schemas/distribution
	install -pm 644 bootiso.rng $(DESTDIR)/usr/share/spin/schemas/distribution/bootiso.rng
	install -pm 644 chroot.rng $(DESTDIR)/usr/share/spin/schemas/distribution/chroot.rng
	install -pm 644 config-rpm.rng $(DESTDIR)/usr/share/spin/schemas/distribution/config-rpm.rng
	install -pm 644 diskboot-image.rng $(DESTDIR)/usr/share/spin/schemas/distribution/diskboot-image.rng
	install -pm 644 gpgsign.rng $(DESTDIR)/usr/share/spin/schemas/distribution/gpgsign.rng
	install -pm 644 iso.rng $(DESTDIR)/usr/share/spin/schemas/distribution/iso.rng
	install -pm 644 kickstart.rng $(DESTDIR)/usr/share/spin/schemas/distribution/kickstart.rng
	install -pm 644 lib.rng $(DESTDIR)/usr/share/spin/schemas/distribution/lib.rng
	install -pm 644 livecd.rng $(DESTDIR)/usr/share/spin/schemas/distribution/livecd.rng
	install -pm 644 logos-rpm.rng $(DESTDIR)/usr/share/spin/schemas/distribution/logos-rpm.rng
	install -pm 644 main.rng $(DESTDIR)/usr/share/spin/schemas/distribution/main.rng
	install -pm 644 packages.rng $(DESTDIR)/usr/share/spin/schemas/distribution/packages.rng
	install -pm 644 product-image.rng $(DESTDIR)/usr/share/spin/schemas/distribution/product-image.rng
	install -pm 644 publish.rng $(DESTDIR)/usr/share/spin/schemas/distribution/publish.rng
	install -pm 644 release-files.rng $(DESTDIR)/usr/share/spin/schemas/distribution/release-files.rng
	install -pm 644 release-rpm.rng $(DESTDIR)/usr/share/spin/schemas/distribution/release-rpm.rng
	install -pm 644 repos.rng $(DESTDIR)/usr/share/spin/schemas/distribution/repos.rng
	install -pm 644 rpmbuild.rng $(DESTDIR)/usr/share/spin/schemas/distribution/rpmbuild.rng
	install -pm 644 sources.rng $(DESTDIR)/usr/share/spin/schemas/distribution/sources.rng
	install -pm 644 updates-image.rng $(DESTDIR)/usr/share/spin/schemas/distribution/updates-image.rng
	install -pm 644 virtimage.rng $(DESTDIR)/usr/share/spin/schemas/distribution/virtimage.rng

clean:
